<Page loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo"
  actionBarHidden="true">
	<GridLayout class="page">
		<StackLayout>
			<StackLayout id="icon">

			</StackLayout>
			<StackLayout id="instructions">
				<Label textWrap="true" id="title" text="{{ L('views.onboarding.termsView.title') }}"> </Label>
				<Label textWrap="true" id="instructions" text="{{ L('views.onboarding.termsView.instructions') }}"></Label>
			</StackLayout>

			<ScrollView id="terms" >
				<StackLayout class="home-panel">
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info1') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info2') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info3') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info4') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info5') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info6') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info7') }}"></Label>
					<Label></Label>
					<Label textWrap="true" text="{{ L('views.onboarding.termsView.info8') }}"></Label>
				</StackLayout>
			</ScrollView>
			<Button id="accept" text="{{ L('views.onboarding.termsView.button') }}" tap="acceptTerms"></Button>
		</StackLayout>
	</GridLayout>

</Page>
