<Page loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo"
  actionBarHidden="true">

	<StackLayout id="first">
        <Image src="res://ic_habitlab_white" id="icon" />
        <Label text="{{ L('views.onboarding.nameView.title') }}" class='title' textWrap='true' />
        <TextField hint="{{ L('views.onboarding.nameView.nameHint') }}" TEXT="{{ name }}" autocorrect="false" autocapitalization="none" style="color:white" id="name" returnPress="checkNameNextPage"/>
        <Label text="{{ L('views.onboarding.nameView.info1') }}" textWrap='true' id="welcome" />
        <Label text=""></Label><Label text=""></Label>
        <Label text="{{ L('views.onboarding.nameView.info2') }}" textWrap="true"></Label>
        <Button text="{{ L('views.onboarding.nameView.button') }}" id="start-button" tap="checkNameNextPage"/>
  </StackLayout>
     

</Page>
