<Page loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo" 
  actionBarHidden="true" xmlns:VideoPlayer="nativescript-videoplayer">
    <StackLayout>
        <Label text="{{ L('views.onboarding.overlayPermissionView.title') }}" textWrap='true' class="title"/>
        <Label text="{{ text_field }}" textWrap="true"></Label>
        <!-- <VideoPlayer:Video class="firstVideo"
          controls="false" 
          loop="true" autoplay="true"
            src="~/videos/OverlayPermission.mp4"  /> -->
            <Button text="{{ button_text }}" tap="giveDrawPermission"></Button>
            <Label class="help" text="{{ L('views.onboarding.overlayPermissionView.help') }}" textWrap ="true" visibility="{{ done}}"></Label>
            <Label text="{{ L('views.onboarding.overlayPermissionView.hint1') }}" textWrap="true" visibility="{{ done }}"> </Label>
            <Label text="{{ L('views.onboarding.overlayPermissionView.hint2') }}" textWrap="true" visibility="{{ done }}"></Label>
            <Label text="{{ L('views.onboarding.overlayPermissionView.hint3') }}" textWrap="true" visibility="{{ done }}"></Label>
            <Button text="{{ L('views.onboarding.overlayPermissionView.button2') }}" tap="moveOn" visibility="{{ done }}"></Button>
    </StackLayout>
</Page>
