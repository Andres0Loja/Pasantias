<Page loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo"
  actionBarHidden="true" xmlns:VideoPlayer="nativescript-videoplayer">
		<StackLayout>
        <Label text="{{ L('views.onboarding.accessibilityPermissionView.title') }}" textWrap='true' class="title"/>
        <StackLayout>
          <ScrollView height="80%">
            <StackLayout >
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.text.part1') }}"></Label>
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.text.part2') }}"></Label>
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.info1') }}" class="information"/>
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.info2') }}" class="information"/>
              <Image src="~/images/accessibility_example.jpg" class="information-image" />
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.info3') }}" class="information"/>
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.info4') }}" class="information"/>
              <Label textWrap="true" text="{{ L('views.onboarding.accessibilityPermissionView.info5') }}" class="information"/>
            </StackLayout>
          </ScrollView>
        <Button id="accessibilityButton" text="{{ L('views.onboarding.accessibilityPermissionView.button') }}" tap="giveAccessibilityPermission"/>
      </StackLayout>
    </StackLayout>
</Page>
